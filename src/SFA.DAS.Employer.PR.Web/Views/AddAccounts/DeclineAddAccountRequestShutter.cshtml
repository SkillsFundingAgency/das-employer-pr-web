@using SFA.DAS.Employer.PR.Web.Models;
@Model DeclineAddAccountRequestViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Are you sure you want to add @Model.ProviderName
                    </h1>
                </legend>
                <p class="govuk-body">
                    You cannot add @Model.ProviderName.ToUpper() (@Model.Ukprn) because you're already linked to them. Continue to update permissions for this training provider.
                </p>
            </fieldset>
        </div>
        <div class="govuk-button-group">
            <form Action="@Model.ChangePermissionsLink" method="Get">
                <button type="submit" id="continue" class="govuk-button" data-disable-on-submit="true">Continue</button>
                <a class="govuk-link" href="@Model.ReturnToYourTrainingProvidersLink">Return to your training providers</a>
            </form>
        </div>
    </div>
</div>