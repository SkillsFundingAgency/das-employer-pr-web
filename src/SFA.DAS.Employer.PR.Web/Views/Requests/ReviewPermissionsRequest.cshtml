@model ReviewPermissionsRequestViewModel

@{
    ViewBag.Title = "Review Permission Request";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">
            Review permissions request from UNITED SKILLS TRAINING
        </h1>
        <p class="govuk-body govuk-!-font-size-19">
            UNITED SKILLS TRAINING has asked for these permissions. They should have confirmed these with you before sending the request.
            You can view their current permissions in the Manage training providers page of your account.
        </p>
        <table class="govuk-table">
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__cell">
                        <div class="govuk-!-margin-bottom-3">
                            <b>Add apprentice records</b>
                        </div>
                        <p class="govuk-body">
                            Training provider can add apprentice records.  If you do not pay the levy (you have an annual pay bill of under £3 million),
                            training provider can also reserve funding for your apprentices.
                        </p>
                    </th>
                    <td scope="col" class="govuk-table__cell">
                        Yes, employer will review records
                    </td>
                </tr>
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__cell">
                        <div class="govuk-!-margin-bottom-3">
                            <b>Recruit apprentices</b>
                        </div>
                        <p class="govuk-body">
                            Training provider can advertise apprenticeships and review applications on your behalf.
                        </p>
                    </th>
                    <td scope="col" class="govuk-table__cell">Yes</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>